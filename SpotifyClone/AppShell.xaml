<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SpotifyClone.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SpotifyClone.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SpotifyClone">

    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate local:LoginView}"
        Route="LoginView" />

    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate local:MainView}"
        Route="MainView" />

    <ShellContent
        Title=""
        Route="CreateAccountView"
        ContentTemplate="{DataTemplate local:CreateAccountView}" />

    <ShellContent
        Title=""
        Route="ProfileView"
        ContentTemplate="{DataTemplate local:ProfileView}" />

</Shell>
